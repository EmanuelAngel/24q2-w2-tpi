include ./lib/Search/Search.pug
include ./lib/Gallery/Gallery.pug
include ./lib/DarkModeToggler/DarkModeToggler.pug
include ./lib/Footer/Footer.pug

doctype html
html(lang="es" class="no-transition")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon" href="images/favicon.ico", type="image/x-icon")
    include ./fonts/googleFonts.pug
    include ./fonts/montserratFont.pug
    include ./styles/styles.pug
    include ./scripts/scripts.pug
      
    title The Met Museum
  body
    +DarkModeToggler()
    div(class="transition-colors duration-300 ease-out dark:ease-in scroll-smooth bg-primary-100 text-primary-950 dark:bg-primary-950 dark:text-primary-100")
      main(class="flex flex-col items-center justify-center max-w-5xl gap-16 px-4 py-16 mx-auto")
        +Search()
        +Gallery({ data: objects })
        
      +Footer()
        