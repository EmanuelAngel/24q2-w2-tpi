include ../Button/Button.pug

mixin Search()
  form(class="flex flex-col w-full gap-8 p-4 md:gap-12")
    header(class="text-xl font-semibold text-left text-neutral-900 dark:text-neutral-100") Filtros
    div(class="flex flex-col gap-8 md:flex-row md:gap-8")
      select#filter(class="w-full p-2 border-2 rounded-md border-neutral-400 dark:bg-transparent")
        option(selected value="all") Todos
      input(type="text" class="p-2 border-2 rounded-md border-neutral-400 dark:bg-transparent" placeholder="France")
      input(type="text" class="p-2 border-2 rounded-md border-neutral-400 dark:bg-transparent" placeholder="Sunflower")
    +Button({ text: "Filtrar", color: "neutral", className: "w-full w-32" })