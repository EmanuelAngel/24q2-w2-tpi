mixin Button({ text = "Button", color = "neutral", className = "", type = "button", disabled=false })
  - const btnClasses = "px-4 py-2 rounded-md font-semibold transition-colors duration-300"
  - const variants = {}
  - variants.neutral = "bg-neutral-700 text-white hover:bg-neutral-800 dark:bg-neutral-300 dark:text-black dark:hover:bg-neutral-200"
  - variants.primary = "bg-primary-700 text-white hover:bg-primary-800 dark:bg-primary-300 dark:text-black dark:hover:bg-primary-200"
  button(class=`${btnClasses} ${variants[color]} ${className}` type=type disabled=disabled) #{text}